FROM python:3.10-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    libgl1 libglib2.0-0 curl && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ---- Warm up EasyOCR so models are cached in the image ----
# This downloads and caches detector/recognizer weights at build time.
RUN python - <<'PY'
import easyocr
easyocr.Reader(['en'], gpu=False)
print("EasyOCR models downloaded and cached.")
PY
# -----------------------------------------------------------

COPY server.py .
EXPOSE 6060
CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "6060"]
